datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Admin {
  id        Int      @id @default(autoincrement())
  firstName String
  lastName  String
  email     String   @unique
  birthDate DateTime
  gender    Gender
  password  String
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now())
}

model Employee {
  id          Int      @id @default(autoincrement())
  firstName   String
  lastName    String?
  email       String   @unique
  phoneNumber String
  address     String
  gender      Gender
  Leave       Leave[]
  createdAt   DateTime @default(now())
  updatedAt   DateTime @default(now())
}

model Leave {
  id            Int      @id @default(autoincrement())
  reason        String
  startDate     DateTime
  endDate       DateTime
  employeeId    Int
  totalWorkDays Int
  employee      Employee @relation(fields: [employeeId], references: [id])
  createdAt     DateTime @default(now())
  updatedAt     DateTime @default(now())
}

enum Gender {
  Male
  Female
}
